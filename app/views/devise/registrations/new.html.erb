<% content_for :form_wrap do %>
  <h2 class="text-3xl font-bold mb-6">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-6">
      <%= f.label :email, class: "uppercase text-gray-700 text-xs font-bold " %> <br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none" %>
    </div>

    <div class="mb-6">
      <%= f.label :password , class: "uppercase text-gray-700 text-xs font-bold " %>
      <% if @minimum_password_length %>
        <em class="italic text-sm text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "input shadow  border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "uppercase text-gray-700 text-xs font-bold " %> <br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none " %>
    </div>

    
    <%= f.submit "Sign up", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full" %>
    
  <% end %>

  <div class="my-6">
    <%= render "devise/shared/links" %>
  </div>
  
<% end %>
 
 <%= render "devise/shared/form_wrap" %>
