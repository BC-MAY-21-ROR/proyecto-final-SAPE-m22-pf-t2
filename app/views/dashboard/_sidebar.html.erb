<div id="sidebar" class="h-screen w-16 menu bg-white text-white px-4 flex items-center nunito static fixed shadow">
  
  <ul class="list-reset">
    <li class="my-2 md:my-0">
      <%= link_to dashboard_path,
        class: "block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" do %>
        <i class="fas fa-home fa-fw mr-3 text-indigo-400"></i>
        <span class="w-full inline-block pb-1 md:pb-0 text-sm">
          Home
        </span>
      <% end %>
    </li>

    <li class="my-2 md:my-0">
      <%= link_to employees_path,
        class: "block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" do %>
        <i class="fa-solid fa-users mr-3"></i>
        <span class="w-full inline-block pb-1 md:pb-0 text-sm">
          Employees
        </span>
      <% end %>
    </li>

    <% if can? :manage, Client %>
      <li class="my-2 md:my-0">
        <%= link_to clients_path,
        class: "block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" do %>
          <i class="fa-solid fa-users-gear mr-3"></i>
          <span class="w-full inline-block pb-1 md:pb-0 text-sm">
            Clients
          </span>
        <% end %>
      </li>
    <% end %>

    <% if can? :manage, Provider %>
      <li class="my-2 md:my-0">
        <%= link_to providers_path,
        class: "block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" do %>
          <i class="fa-solid fa-truck-field mr-3"></i>
          <span class="w-full inline-block pb-1 md:pb-0 text-sm">
            Providers
          </span>
        <% end %>
      </li>
    <% end %>

    <li class="my-2 md:my-0">
      <%= link_to products_path,
        class: "block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" do %>
        <i class="fa-solid fa-boxes-stacked mr-3"></i>
        <span class="w-full inline-block pb-1 md:pb-0 text-sm">
          Inventory
        </span>
      <% end %>
    </li>

    <li class="my-2 md:my-0">
      <%= link_to sales_path,
        class: "block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" do %>
        <i class="fa-solid fa-cash-register mr-4"></i>
        <span class="w-full inline-block pb-1 md:pb-0 text-sm">
          Sales
        </span>
      <% end %>
    </li>

    <li class="my-2 md:my-0">
      <%= link_to expenses_path,
        class: "block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" do %>
        <i class="fa-solid fa-clipboard mr-4"></i>
        <span class="w-full inline-block pb-1 md:pb-0 text-sm">
          Business expenses
        </span>
      <% end %>
    </li>

    <li class="my-2 md:my-0">
      <%= link_to business_path,
        class: "block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" do %>
        <i class="fa-solid fa-briefcase mr-4"></i>
        <span class="w-full inline-block pb-1 md:pb-0 text-sm">
          Business administration
        </span>
      <% end %>
    </li>

    <li class="my-2 md:my-0">
      <%= link_to financial_state_path,
        class: "block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" do %>
        <i class="fa-solid fa-money-bill-trend-up mr-4"></i>
        <span class="w-full inline-block pb-1 md:pb-0 text-sm">
          Financial state
        </span>
      <% end %>
    </li>
  </ul>
</div>
