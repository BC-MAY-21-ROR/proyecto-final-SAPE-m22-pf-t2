<!-- Side bar-->
<div
  id="sidebar"
  class="
    h-screen
    w-16
    menu
    bg-white
    text-white
    px-4
    flex
    items-center
    nunito
    static
    fixed
    shadow
  "
>
  <ul class="list-reset">
    <li class="my-2 md:my-0">
      <%= link_to dashboard_path,
        class: "block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" do %>
        <i class="fas fa-home fa-fw mr-3 text-indigo-400"></i>
        <span class="w-full inline-block pb-1 md:pb-0 text-sm">
          Home
        </span>
      <% end %>
    </li>

    <li class="my-2 md:my-0">
      <%= link_to business_path,
        class: "block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" do %>
        <i class="fas fa-tasks fa-fw mr-3"></i>
        <span class="w-full inline-block pb-1 md:pb-0 text-sm">
          Business info
        </span>
      <% end %>
    </li>

    <li class="my-2 md:my-0">
      <%= link_to expenses_path,
        class: "block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" do %>
        <i class="fas fa-tasks fa-fw mr-3"></i>
        <span class="w-full inline-block pb-1 md:pb-0 text-sm">
          Business Expenses
        </span>
      <% end %>
    </li>

    <li class="my-2 md:my-0">
      <%= link_to employees_path,
        class: "block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" do %>
        <i class="fa-solid fa-users "></i>
        <span class="w-full inline-block pb-1 md:pb-0 text-sm pl-3">
          Employees
        </span>
      <% end %>
    </li>

   <li class="my-2 md:my-0">
      <%= link_to products_path,
        class: "block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" do %>
        <i class="fa-solid fa-boxes-stacked"></i>
        <span class="w-full inline-block pb-1 md:pb-0 text-sm pl-4">
          Inventory
        </span>
      <% end %>
    </li>
    <li class="my-2 md:my-0">
      <%= link_to register_index_path,
        class: "block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" do %>
        <i class="fa-solid fa-cash-register"></i>
        <span class="w-full inline-block pb-1 md:pb-0 text-sm pl-4">
          Register 
        </span>
      <% end %>
    </li>
    <li class="my-2 md:my-0">
      <%= link_to financial_statement_index_path,
        class: "block py-1 md:py-3 pl-1 align-middle text-gray-600 no-underline hover:text-indigo-400" do %>
        <i class="fa-brands fa-wpforms"></i>
        <span class="w-full inline-block pb-1 md:pb-0 text-sm pl-4">
          Financial Statement
        </span>
      <% end %>
    </li>
    
    <li class="my-2 md:my-0">
      <a
        href="/dashboard/balance_sheet"
        class="
          block
          py-1
          md:py-3
          pl-1
          align-middle
          text-gray-600
          no-underline
          hover:text-indigo-400
        "
      >
        <i class="fas fa-balance-scale fa-fw mr-3"></i><span class="w-full inline-block pb-1 md:pb-0 text-sm">Balance general</span>
      </a>
    </li>
  </ul>
</div>
