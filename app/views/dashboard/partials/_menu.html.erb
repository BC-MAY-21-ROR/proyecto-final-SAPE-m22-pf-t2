<div class="flex flex-wrap">
    <div class="relative inline-flex align-middle w-full">
      <button class="flex items-center focus:outline-none mr-3" type="button" data-controller="dashboard" data-action="click->dashboard#openDropdown">
        <img class="w-8 h-8 rounded-full mr-4" src="<%= current_user.avatar.url(:width=>32,:crop=>"fill") %>" alt="Avatar of User" />
        <span class="hidden md:inline-block">Hi,<%= current_user.name %> </span>
        <%= show_svg 'arrow_down.svg' %>
      </button>
      <div class="hidden bg-white text-base z-50 float-left py-2 list-none text-left rounded shadow-lg mt-1" style="min-width:12rem" id="avatar-dropdown">
        <a href="<%= user_path(current_user) %>"  class="text-sm py-2 px-4 font-normal block w-full whitespace-nowrap bg-transparent  text-slate-700">
          User information
        </a>
        <a href="<%= business_path %>" class="text-sm py-2 px-4 font-normal block w-full whitespace-nowrap bg-transparent text-slate-700">
          Business
        </a>
        <a href="<%= financial_state_url %>" class="text-sm py-2 px-4 font-normal block w-full whitespace-nowrap bg-transparent text-slate-700">
          Financial state
        </a>
        <div class="h-0 my-2 border border-solid border-t-0 border-slate-800 opacity-25"></div>
        <a href="<%= root_path %>" class="text-sm py-2 px-4 font-normal block w-full whitespace-nowrap bg-transparent text-slate-700">
          Back to home
        </a>
        <span class="text-sm left-3 py-2 px-4 font-normal block w-full whitespace-nowrap bg-transparent text-slate-700"> 
        <%= button_to "Sign out", destroy_user_session_path, :method => :delete  %>  
        </span>
      </div>
    </div>  
</div>