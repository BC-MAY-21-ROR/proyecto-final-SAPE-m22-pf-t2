<div class="h-screen bg-white">
  <%= render 'dashboard/sidebar' %>
  <%= render 'dashboard/partials/navbar' %>
  <div class="p-4 lg:px-0">
    <div
      class="
        w-full
        p-6
        rounded-lg
        mx-auto
        bg-white
        drop-shadow-lg
        sm:w-4/5
        md:w-2/3
        lg:w-3/5
        xl:w-1/2
        2xl:w-2/5
      "
    >
      <h2 class=" text-xl text-center font-black leading-tight">
        <% if @expense.present? %>
          Financial state of&nbsp;<%= format_month_from_expense(@expense) %>
        <% else %>
          No financial state for month:&nbsp;<%= @selected_month %>
        <% end %>
      </h2>
      <%= form_with url: financial_state_path, method: :get do |f| %>
        <div class="mb-6">
          <%= f.label 'Month',
            for: 'month',
            class: 'block mb-2 text-sm font-medium text-gray-900' %>
          <div>
            <input
              id="month"
              name="month"
              type="month"
              value="<%= @expense.present? ? format_month_from_expense(@expense) : @selected_month %>"
              class="
                bg-gray-50
                border
                border-gray-300
                text-gray-900
                text-sm
                rounded-lg
                p-2.5
                focus:ring-blue-500
                focus:border-blue-500
              "
            >
            <%= f.submit 'Apply',
              class: 'text-white bg-blue-700 font-medium rounded-lg text-sm px-5 py-2.5 mt-4 text-center cursor-pointer hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 sm:w-auto"' %>
          </div>
        </div>
      <% end %>
      <%= render partial: 'financial_states/partials/state' %>
    </div>
  </div>
</div>
