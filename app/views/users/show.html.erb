<%= render 'dashboard/sidebar' %>
<%= render 'dashboard/partials/navbar' %>
<div class="container mx-auto h-screen p-14">
  <div
    class="
      relative
      max-w-md
      mx-auto
      min-w-0
      break-words
      bg-white
      w-full
      mb-3
      shadow-lg
      rounded-xl
      mt-16
      md:max-w-2xl
    "
  >
    <div class="px-6">
      <div class="flex flex-wrap justify-center">
        <div class="w-full flex justify-center">
          <div class="relative">
            <% if @user.avatar.attached? %>
              <img
                src="<%= @user.avatar.attachment.url %>"
                class="
                  shadow-xl
                  rounded-full
                  align-middle
                  border-none
                  absolute
                  -m-16
                  -ml-20
                  lg:-ml-16
                  max-w-[150px]
                "
                alt="User avatar"
              />
            <% end %>
          </div>
        </div>
        <div class="w-full text-center mt-20">
        </div>
      </div>
      <div class="text-center mt-2">
        <h3 class="text-2xl text-slate-700 font-bold leading-normal mb-1">
          <%= @user.name %>
        </h3>
        <div class="text-xs mt-0 mb-2 text-slate-400 font-bold uppercase">
          <i class="fa-solid fa-envelope mr-2 text-slate-400 opacity-75"></i>
          <%= @user.email %>
        </div>
      </div>
      <div class="mt-6 py-6 border-t border-slate-200 text-center">
        <div class="flex flex-wrap justify-center">
          <div class="w-full px-4">
            <p class="font-light leading-relaxed text-slate-600 mb-4">
              An artist of considerable range, Mike is the name taken by
              Melbourne-raised, Brooklyn-based Nick Murphy writes, performs and
              records all of his own music, giving it a warm.
            </p>
            <% if can? :edit, @user %>
              <%= link_to 'Edit info',
                edit_user_path(@user),
                class: "font-normal text-slate-700 hover:text-slate-400" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
