<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing info</h1>

  <%= form_with(model: @user, class: "contents") do |form| %>
    <div class="my-5">
      <%= form.label :name %>
      <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :email %>
      <%= form.text_field :email,
        class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full",
        disabled: true %>
    </div>

    <div class="my-5">
      <%= form.label :password, 'Update password' %>
      <%= form.password_field :password,
        class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :password_confirmation, 'Confirm new password' %>
      <%= form.password_field :password_confirmation,
        class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div class="my-5">
      <%= form.label "Foto de perfil" %>
      <br>
      <%= form.file_field :avatar, class:"form-control" %><br>
    </div>
    <div class="inline">
      <%= form.submit 'Update my info',
        class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>


  <% end %>

  <%= link_to "Show my info", @user, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
