<div class="px-2 w-full">
  <div class="col-span-full xl:col-span-6 bg-white shadow-lg rounded-sm border border-gray-200">
    <header class="px-5 py-4 border-b border-gray-100">
      <h2 class="font-bold text-gray-800">List of Products</h2>
    </header>
    <div class="p-3">

      <!-- Table -->
      <div class="overflow-x-auto">

        <table class="table-auto w-full">
          <!-- Table header -->
          <thead class="text-xs font-semibold uppercase text-gray-400 bg-gray-50">
            <tr>
              <th class="p-2 whitespace-nowrap">
                <div class="font-bold text-left">Code</div>
              </th>
              <th class="p-2 whitespace-nowrap">
                <div class="font-bold text-left">Name</div>
              </th>
              <th class="p-2 whitespace-nowrap">
                <div class="font-bold text-left">Price</div>
              </th>
              <th class="p-2 whitespace-nowrap">
                <div class="font-bold text-center">Stock</div>
              </th>
              <th class="p-2 whitespace-nowrap">
                <div class="font-bold text-center">Show this product</div>
              </th>
              <th class="p-2 whitespace-nowrap">
                <div class="font-bold text-center">Remove this product</div>
              </th>
            </tr>
          </thead>

          <!-- Table body -->
          <tbody>
            <% @products.each do |product| %>
              <tr class="border-b">
                <td class="text-sm text-gray-900 font-semibold px-6 py-4 whitespace-nowrap">
                  <%=product.name%>
                </td>
                <td class="text-sm text-gray-900 font-medium px-6 py-4 whitespace-nowrap">
                   <%=product.name%>
                </td>
                <td class="text-sm text-gray-900 font-normal px-6 py-4 whitespace-nowrap uppercase">
                  <%=product.price%>
                </td>
                <td class="text-sm text-gray-900 font-normal px-6 py-4 whitespace-nowrap uppercase">
                  <%=product.stock%>
                </td>
                <td class="text-sm text-gray-900 font-normal px-6 py-4 whitespace-nowrap ">
                    <%= link_to "Show this product", product, class: "bg-blue-600 hover:bg-blue-400 text-white font-bold py-2 px-4 rounded-full" %>
                </td>
                
                <td
                    scope="col"
                    class="
                      text-sm
                      text-gray-900
                      font-normal
                      px-6
                      py-4
                      whitespace-nowrap
                    "
                  >
                    <%= button_to 'Remove',
                      product_path(product),
                      method: :delete,
                      class: 'bg-red-600 hover:bg-red-500 text-white font-bold py-2 px-4 rounded-full',
                      form: { data: { turbo_confirm: 'Are you sure?' } } %>
                </td>
                
              </tr>
            <% end %>
          </tbody>
        </table>
        
      </div>
    </div>
  </div>
</div>
