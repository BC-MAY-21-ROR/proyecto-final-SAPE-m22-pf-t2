<%= form_with url: enroll_existing_user_to_current_business_path, method: :post do |f| %>

  <div class="mb-6">
    <%= f.label 'Email *',
      for: 'user_email',
      class: "block mb-2 text-sm font-medium text-gray-900" %>
    <%= f.text_field :email,
      placeholder: 'Enter user email',
      class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="mb-6">
    <%= f.label :role, 'Role *', class:"mb-2 text-sm font-medium text-gray-900" %>
    <%= f.select :role,
      options_for_select(roles_to_options),
      {},
      { class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg mt-2 p-2.5 focus:ring-blue-500 focus:border-blue-500' } %>
  </div>

  <%= f.submit "Add to business", class: "text-white bg-blue-700 font-medium rounded-lg text-sm w-full px-5 py-2.5 mt-4 text-center cursor-pointer hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 sm:w-auto" %>

<% end %>
