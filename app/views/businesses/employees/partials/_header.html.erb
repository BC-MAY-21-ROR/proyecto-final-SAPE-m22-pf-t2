<div class="flex justify-between items-center mb-4">
  <div>
    <h1 class="font-bold text-3xl">Employees</h1>
    <h2 class="mb-2">
      Your current role for this business is:
      <strong class="uppercase">
        <%= @current_user_enrollment.role %>
      </strong>
    </h2>
  </div>
  <% if can? :create_and_enroll, current_user %>
    <%= link_to 'Add Employee',
      new_employee_path,
      class: "text-white bg-blue-700 font-medium rounded-lg text-sm w-full px-5 py-2.5 mt-4 text-center cursor-pointer hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 sm:w-auto" %>
  <% end %>
</div>
